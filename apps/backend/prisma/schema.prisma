generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = env("DATABASE_PROVIDER")
  url      = env("DATABASE_URL")
}

model Process {
  id              Int       @id @default(autoincrement())
  edocs           String    @unique
  objeto          String
  setor           String?
  responsavel     String?
  status          String?
  dataInstauracao DateTime?
  prazo           DateTime?
  dataConclusao   DateTime?
  etapas          Stage[]
  documentos      Document[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Stage {
  id         Int       @id @default(autoincrement())
  nome       String
  responsavel String?
  prazo      DateTime?
  situacao   String?   // pendente, em_andamento, concluida
  inicio     DateTime?
  fim        DateTime?
  process    Process   @relation(fields: [processId], references: [id])
  processId  Int
}

model Document {
  id        Int      @id @default(autoincrement())
  tipo      String
  status    String?  // faltando, anexado, aprovado
  url       String?
  process   Process  @relation(fields: [processId], references: [id])
  processId Int
}

model CatalogOption {
  id       Int     @id @default(autoincrement())
  category String
  value    String
  active   Boolean @default(true)

  @@index([category, value], name: "category_value_idx")
}
